```liquid
<header class="bg-white shadow-sm sticky top-0 z-50">
  <div class="container mx-auto px-4 py-3">
    <div class="flex justify-between items-center">
      <div class="flex items-center gap-8">
        <a href="/" class="flex items-center gap-3">
          <span class="text-xl font-bold">{{ shop.name }}</span>
        </a>
      </div>

      <nav class="hidden md:flex items-center gap-8">
        {% for link in linklists.main-menu.links %}
          <a href="{{ link.url }}" class="hover:text-blue-600 transition-colors">{{ link.title }}</a>
        {% endfor %}
      </nav>

      <div class="flex items-center gap-4">
        <a href="/search" class="p-2">
          {% render 'icon-search' %}
        </a>
        <a href="/cart" class="p-2 relative">
          {% render 'icon-cart' %}
          <span class="cart-count absolute -top-1 -right-1 bg-accent text-white text-xs rounded-full w-4 h-4 flex items-center justify-center">
            {{ cart.item_count }}
          </span>
        </a>
        <button class="md:hidden p-2" aria-label="Menu">
          {% render 'icon-menu' %}
        </button>
      </div>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}
