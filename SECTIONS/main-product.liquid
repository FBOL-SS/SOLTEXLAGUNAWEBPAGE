```liquid
<div class="container mx-auto px-4 py-12">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <div class="product-gallery">
      {% for media in product.media %}
        <div class="mb-4">
          {% case media.media_type %}
            {% when 'image' %}
              <img 
                src="{{ media | img_url: '1200x' }}" 
                alt="{{ media.alt }}" 
                loading="lazy"
                width="1200"
                height="1200"
                class="w-full rounded-lg"
              >
            {% when 'external_video' %}
              <div class="relative aspect-video">
                {{ media | external_video_tag: class: 'w-full h-full' }}
              </div>
            {% else %}
              {{ media | media_tag }}
          {% endcase %}
        </div>
      {% endfor %}
    </div>

    <div class="product-info">
      <h1 class="text-3xl font-bold mb-2">{{ product.title }}</h1>
      
      <div class="flex items-center gap-2 mb-4">
        {% if product.compare_at_price > product.price %}
          <span class="text-gray-500 line-through">{{ product.compare_at_price | money }}</span>
        {% endif %}
        <span class="text-2xl font-bold">{{ product.price | money }}</span>
      </div>

      {% if product.vendor %}
        <p class="mb-4">
          <span class="font-semibold">Brand:</span> {{ product.vendor }}
        </p>
      {% endif %}

      {% if product.available %}
        <div class="mb-6">
          {% form 'product', product %}
            <div class="mb-4">
              {% unless product.has_only_default_variant %}
                {% for option in product.options_with_values %}
                  <div class="mb-3">
                    <label class="block font-medium mb-1">{{ option.name }}</label>
                    <select 
                      class="w-full border border-gray-300 rounded px-3 py-2"
                      data-option-selector
                      data-index="option{{ option.position }}"
                    >
                      {% for value in option.values %}
                        <option 
                          value="{{ value | escape }}"
                          {% if option.selected_value == value %}selected{% endif %}
                        >
                          {{ value }}
                        </option>
                      {% endfor %}
                    </select>
                  </div>
                {% endfor %}
              {% endunless %}
            </div>

            <div class="flex flex-col sm:flex-row gap-4">
              <button 
                type="submit" 
                name="add" 
                class="bg-accent hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition-colors"
              >
                Add to Cart
              </button>
              
              {% if section.settings.show_quote_button %}
                <a 
                  href="{{ section.settings.quote_link }}" 
                  class="border-2 border-navy hover:bg-navy hover:text-white text-navy font-bold py-3 px-6 rounded-lg transition-colors text-center"
                >
                  {{ section.settings.quote_text }}
                </a>
              {% endif %}
            </div>
          {% endform %}
        </div>
      {% else %}
        <p class="text-red-500 font-medium mb-6">This product is currently unavailable</p>
      {% endif %}

      <div class="prose max-w-none">
        {{ product.description }}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Main product",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_quote_button",
      "label": "Show quote button",
      "default": true
    },
    {
      "type": "text",
      "id": "quote_text",
      "label": "Quote button text",
      "default": "Request Quote"
    },
    {
      "type": "url",
      "id": "quote_link",
      "label": "Quote button link"
    }
  ]
}
{% endschema %}
