<div class="container mx-auto px-4 py-12">
  <div class="text-center mb-12">
    <h1 class="text-3xl font-bold mb-2">{{ section.settings.heading }}</h1>
    {% if section.settings.subheading %}
      <p class="text-xl max-w-2xl mx-auto">{{ section.settings.subheading }}</p>
    {% endif %}
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {% for block in section.blocks %}
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="p-6">
          <h3 class="text-xl font-bold mb-2">{{ block.settings.title }}</h3>
          <p class="text-gray-600 mb-4">{{ block.settings.description }}</p>
          {% if block.settings.cta_text and block.settings.cta_link %}
            <a 
              href="{{ block.settings.cta_link }}" 
              class="inline-block text-accent font-medium hover:text-blue-700 transition-colors"
            >
              {{ block.settings.cta_text }}
            </a>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</div>

