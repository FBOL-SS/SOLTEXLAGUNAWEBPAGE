<div class="bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow">
  <a href="{{ product.url }}">
    <div class="relative aspect-square overflow-hidden">
      {% if product.featured_image %}
        <img 
          src="{{ product.featured_image | img_url: '600x600' }}" 
          alt="{{ product.featured_image.alt }}" 
          loading="lazy"
          width="600"
          height="600"
          class="w-full h-full object-cover"
        >
      {% else %}
        <div class="w-full h-full bg-gray-100 flex items-center justify-center">
          {% render 'icon-image' %}
        </div>
      {% endif %}
      
      {% if product.compare_at_price > product.price %}
        <span class="absolute top-2 right-2 bg-red-500 text-white text-xs font-bold px-2 py-1 rounded">
          SALE
        </span>
      {% endif %}
    </div>

    <div class="p-4">
      <h3 class="font-semibold mb-1">{{ product.title }}</h3>
      
      <div class="flex items-center gap-2 mb-2">
        {% if product.compare_at_price > product.price %}
          <span class="text-gray-500 line-through">{{ product.compare_at_price | money }}</span>
        {% endif %}
        <span class="font-bold">{{ product.price | money }}</span>
      </div>

      <button 
        class="w-full bg-accent hover:bg-blue-700 text-white font-medium py-2 px-4 rounded transition-colors"
        data-add-to-cart="{{ product.variants.first.id }}"
      >
        Add to Cart
      </button>
    </div>
  </a>
</div>
