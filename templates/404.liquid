
{% layout none %}
<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>404 — {{ shop.name }}</title>
    {{ content_for_header }}
  </head>
  <body style="font-family: system-ui, -apple-system, Segoe UI, Roboto, sans-serif; margin:0;">
    <main style="min-height:100dvh; display:grid; place-items:center; padding:2rem; text-align:center;">
      <div>
        <h1 style="font-size:2rem; margin-bottom:.5rem;">Página no encontrada</h1>
        <p style="color:#6b7280; margin-bottom:1rem;">La página que buscas no existe o fue movida.</p>
        <a href="{{ routes.root_url }}" style="display:inline-block; padding:.75rem 1rem; background:#1C4E80; color:#fff; border-radius:.5rem; text-decoration:none;">Volver al inicio</a>
      </div>
    </main>
  </body>
</html>
