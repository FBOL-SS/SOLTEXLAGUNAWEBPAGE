<section class="bg-gray-50 py-12">
    <div class="container mx-auto px-6">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center">
            <div>
                <h1 class="text-3xl font-bold mb-2">{{ collection.title }}</h1>
                <p class="text-gray-600">Premium industrial sewing machines and parts</p>
            </div>
            <div class="mt-4 md:mt-0 flex items-center">
                <span class="text-gray-600 mr-2">Sort by:</span>
                <select class="border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-lightblue">
                    <option>Featured</option>
                    <option>Price: Low to High</option>
                    <option>Price: High to Low</option>
                    <option>Newest</option>
                    <option>Best Rated</option>
                </select>
            </div>
        </div>
    </div>
</section>
<section class="py-16 bg-white">
    <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% paginate collection.products by 12 %}
                {% for product in collection.products %}
                    {% render 'product-card' with product as product %}
                {% endfor %}
            {% endpaginate %}
        </div>
        <div class="mt-12 text-center text-gray-500 text-sm">
            <p>Replace these logos and names with authorized brand material.</p>
        </div>
        <div class="mt-12 flex justify-center">
            {{ paginate | default_pagination }}
        </div>
    </div>
</section>