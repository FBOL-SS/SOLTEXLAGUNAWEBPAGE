<section class="hero-gradient text-white py-24">
    <div class="container mx-auto px-6 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Get In Touch</h1>
        <p class="text-xl max-w-3xl mx-auto">Our team is ready to help you find the perfect sewing solutions for your business</p>
    </div>
</section>
<section class="py-16 bg-white">
    <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <div>
                <h2 class="text-3xl font-bold mb-6">Send Us a Message</h2>
                <form class="space-y-6" action="/contact" method="post">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="first-name" class="block text-sm font-medium text-gray-700 mb-1">First Name</label>
                            <input type="text" id="first-name" name="contact[first_name]" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-lightblue focus:border-lightblue">
                        </div>
                        <div>
                            <label for="last-name" class="block text-sm font-medium text-gray-700 mb-1">Last Name</label>
                            <input type="text" id="last-name" name="contact[last_name]" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-lightblue focus:border-lightblue">
                        </div>
                    </div>
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                        <input type="email" id="email" name="contact[email]" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-lightblue focus:border-lightblue">
                    </div>
                    <div>
                        <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Phone</label>
                        <input type="tel" id="phone" name="contact[phone]" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-lightblue focus:border-lightblue">
                    </div>
                    <div>
                        <label for="company" class="block text-sm font-medium text-gray-700 mb-1">Company</label>
                        <input type="text" id="company" name="contact[company]" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-lightblue focus:border-lightblue">
                    </div>
                    <div>
                        <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">Subject</label>
                        <select id="subject" name="contact[subject]" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-lightblue focus:border-lightblue">
                            <option>Sales Inquiry</option>
                            <option>Technical Support</option>
                            <option>Parts Request</option>
                            <option>Service Request</option>
                            <option>Other</option>
                        </select>
                    </div>
                    <div>
                        <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
                        <textarea id="message" name="contact[body]" rows="5" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-lightblue focus:border-lightblue"></textarea>
                    </div>
                    <button type="submit" class="w-full bg-lightblue hover:bg-blue-700 text-white font-bold py-4 px-6 rounded-lg transition duration-300">
                        Send Message
                    </button>
                </form>
            </div>
            <div>
                <h2 class="text-3xl font-bold mb-6">Contact Information</h2>
                <p class="text-gray-700 mb-8">Our customer service team is available Monday through Friday from 8:00 AM to 6:00 PM CST. We'll respond to your inquiry within 24 hours.</p>
                <div class="space-y-6">
                    <div class="bg-gray-50 p-6 rounded-lg contact-card">
                        <div class="flex items-start">
                            <div class="bg-lightblue bg-opacity-10 p-3 rounded-full mr-4">
                                <i data-feather="map-pin" class="text-lightblue w-6 h-6"></i>
                            </div>
                            <div>
                                <h3 class="font-semibold mb-1">Main Office</h3>
                                <p class="text-gray-600">Av. Industrial 1234<br>Monterrey, Nuevo Le√≥n<br>Mexico 64000</p>
                            </div>
                        </div>
                    </div>
                    <!-- Add other contact cards from contact.html -->
                </div>
            </div>
        </div>
    </div>
</section>
