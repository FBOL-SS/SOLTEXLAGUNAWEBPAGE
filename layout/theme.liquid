<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>{{ page_title }}{% if current_tags %} – {{ current_tags | join: ', ' }}{% endif %}{% if current_page != 1 %} – Página {{ current_page }}{% endif %}{% if shop.name %} – {{ shop.name }}{% endif %}</title>
    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    {{ content_for_header }}
    {{ 'styles.css' | asset_url | stylesheet_tag }}
  </head>
  <body>
    {% section 'header' %}

    <main id="MainContent" role="main">
      {{ content_for_layout }}
    </main>

    {% section 'footer' %}

    <script src="{{ 'theme.js' | asset_url }}" defer></script>
  </body>
</html>
