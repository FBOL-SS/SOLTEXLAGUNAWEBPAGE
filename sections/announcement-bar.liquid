
{% schema %}
{ "name": "Announcement bar", "settings": [
  { "type": "text", "id": "text", "label": "Text", "default": "Envíos a todo México y C.A. — Soporte experto" },
  { "type": "url", "id": "link", "label": "Link" }
] }
{% endschema %}
<div class="ann">
  <div class="container">
    <div style="display:flex;justify-content:center;gap:.75rem">
      <span>{{ section.settings.text }}</span>
      {% if section.settings.link %}<a href="{{ section.settings.link }}">Saber más</a>{% endif %}
    </div>
  </div>
</div>
