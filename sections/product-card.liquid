<div class="bg-gray-50 p-6 rounded-lg brand-card">
    <div class="flex justify-center mb-4">
        <img src="{{ product.featured_image | image_url: width: 320 }}" alt="{{ product.title }}" class="h-20 object-contain">
    </div>
    <h3 class="text-xl font-semibold text-center mb-2">{{ product.title }}</h3>
    <p class="text-gray-700 text-center mb-4">{{ product.description | truncatewords: 20 }}</p>
    <div class="text-center">
        <a href="{{ product.url }}" class="text-lightblue hover:underline font-medium inline-flex items-center">View Catalog <i data-feather="arrow-right" class="ml-1 w-4 h-4"></i></a>
    </div>
</div>