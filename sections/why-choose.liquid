<style>
  #shopify-section-{{ section.id }} {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Poppins', 'Inter', Roboto, 'Helvetica Neue', Arial, sans-serif;
  }

  #shopify-section-{{ section.id }} .section-title {
    font-size: clamp(28px, 4vw, 42px);
    line-height: 1.2;
  }

  #shopify-section-{{ section.id }} .section-subtitle {
    font-size: clamp(14px, 2vw, 18px);
    line-height: 1.6;
  }

  #shopify-section-{{ section.id }} .feature-card {
    background: #ffffff;
    border-radius: 12px;
    padding: 32px 24px;
    box-shadow: 0 2px 8px rgba(13, 27, 42, 0.08);
    transition: all 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  #shopify-section-{{ section.id }} .feature-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 8px 24px rgba(13, 27, 42, 0.15);
  }

  #shopify-section-{{ section.id }} .feature-icon-wrapper {
    width: 64px;
    height: 64px;
    border-radius: 50%;
    background: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
    transition: all 0.3s ease;
  }

  #shopify-section-{{ section.id }} .feature-card:hover .feature-icon-wrapper {
    background: #0d1b2a;
    transform: scale(1.1);
  }

  #shopify-section-{{ section.id }} .feature-icon-wrapper svg {
    width: 32px;
    height: 32px;
    fill: #0d1b2a;
    transition: fill 0.3s ease;
  }

  #shopify-section-{{ section.id }} .feature-card:hover .feature-icon-wrapper svg {
    fill: #ffffff;
  }

  #shopify-section-{{ section.id }} .feature-icon-wrapper img {
    width: 40px;
    height: 40px;
    object-fit: contain;
    transition: transform 0.3s ease;
  }

  #shopify-section-{{ section.id }} .feature-card:hover .feature-icon-wrapper img {
    transform: scale(1.15);
  }

  #shopify-section-{{ section.id }} .feature-title {
    font-size: clamp(18px, 2.5vw, 22px);
    font-weight: 700;
    color: #0d1b2a;
    margin-bottom: 12px;
    line-height: 1.3;
  }

  #shopify-section-{{ section.id }} .feature-description {
    font-size: clamp(14px, 1.8vw, 16px);
    color: #4a5568;
    line-height: 1.6;
    margin-bottom: 16px;
    flex-grow: 1;
  }

  #shopify-section-{{ section.id }} .feature-cta {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    color: #0d1b2a;
    font-weight: 600;
    font-size: 14px;
    text-decoration: none;
    transition: gap 0.3s ease;
  }

  #shopify-section-{{ section.id }} .feature-cta:hover {
    gap: 10px;
  }

  #shopify-section-{{ section.id }} .kpi-container {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24px;
    margin-top: 48px;
  }

  @media (min-width: 768px) {
    #shopify-section-{{ section.id }} .kpi-container {
      grid-template-columns: repeat(4, 1fr);
      gap: 32px;
    }
  }

  #shopify-section-{{ section.id }} .kpi-item {
    text-align: center;
    padding: 24px 16px;
    background: rgba(255, 255, 255, 0.9);
    border-radius: 8px;
  }

  #shopify-section-{{ section.id }} .kpi-value {
    font-size: clamp(32px, 5vw, 48px);
    font-weight: 700;
    color: #0d1b2a;
    line-height: 1;
    margin-bottom: 8px;
  }

  #shopify-section-{{ section.id }} .kpi-label {
    font-size: clamp(12px, 1.5vw, 14px);
    color: #4a5568;
    font-weight: 500;
  }

  #shopify-section-{{ section.id }} .main-cta {
    display: inline-block;
    padding: 16px 40px;
    background: #0d1b2a;
    color: #ffffff;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    font-size: 16px;
    transition: all 0.3s ease;
    margin-top: 40px;
  }

  #shopify-section-{{ section.id }} .main-cta:hover {
    background: #1a2f47;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(13, 27, 42, 0.3);
  }

  @keyframes fadeInUp-{{ section.id }} {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  #shopify-section-{{ section.id }} .fade-in-up {
    animation: fadeInUp-{{ section.id }} 0.8s ease-out forwards;
    opacity: 0;
  }

  #shopify-section-{{ section.id }} .fade-in-up:nth-child(1) { animation-delay: 0.1s; }
  #shopify-section-{{ section.id }} .fade-in-up:nth-child(2) { animation-delay: 0.2s; }
  #shopify-section-{{ section.id }} .fade-in-up:nth-child(3) { animation-delay: 0.3s; }
  #shopify-section-{{ section.id }} .fade-in-up:nth-child(4) { animation-delay: 0.4s; }
  #shopify-section-{{ section.id }} .fade-in-up:nth-child(5) { animation-delay: 0.5s; }
  #shopify-section-{{ section.id }} .fade-in-up:nth-child(6) { animation-delay: 0.6s; }
</style>

<div class="w-full relative" style="{% if section.settings.background_type == 'color' %}background-color: {{ section.settings.background_color }};{% endif %}">
  {% if section.settings.background_type == 'image' and section.settings.background_image != blank %}
    <div class="absolute inset-0 w-full h-full">
      {{ section.settings.background_image | image_url: width: 2000 | image_tag: 
        loading: 'lazy',
        class: 'w-full h-full object-cover',
        sizes: '100vw'
      }}
      <div class="absolute inset-0 bg-black" style="opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }}"></div>
    </div>
  {% endif %}

  <div class="relative max-w-7xl mx-auto px-6 py-16 md:py-24">
    <!-- Section Header -->
    <div class="text-center mb-12 md:mb-16">
      {% if section.settings.section_title != blank %}
        <h2 class="section-title font-bold mb-4" style="color: {% if section.settings.background_type == 'image' and section.settings.background_image != blank %}#ffffff{% else %}#0d1b2a{% endif %}">
          {{ section.settings.section_title }}
        </h2>
      {% endif %}

      {% if section.settings.section_subtitle != blank %}
        <p class="section-subtitle max-w-3xl mx-auto" style="color: {% if section.settings.background_type == 'image' and section.settings.background_image != blank %}rgba(255, 255, 255, 0.9){% else %}#4a5568{% endif %}">
          {{ section.settings.section_subtitle }}
        </p>
      {% endif %}
    </div>

    <!-- Features Grid -->
    {% if section.blocks.size > 0 %}
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-{{ section.settings.desktop_columns }} gap-6 md:gap-8">
        {% for block in section.blocks %}
          {% if block.type == 'feature' %}
            <div class="fade-in-up" {{ block.shopify_attributes }}>
              <div class="feature-card">
                <!-- Icon/Image -->
                <div class="feature-icon-wrapper">
                  {% if block.settings.icon_svg != blank %}
                    {{ block.settings.icon_svg }}
                  {% elsif block.settings.icon_image != blank %}
                    {{ block.settings.icon_image | image_url: width: 80 | image_tag: 
                      loading: 'lazy',
                      alt: block.settings.feature_title
                    }}
                  {% else %}
                    <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                    </svg>
                  {% endif %}
                </div>

                <!-- Content -->
                {% if block.settings.feature_title != blank %}
                  <h3 class="feature-title">{{ block.settings.feature_title }}</h3>
                {% endif %}

                {% if block.settings.feature_description != blank %}
                  <p class="feature-description">{{ block.settings.feature_description }}</p>
                {% endif %}

                {% if block.settings.cta_text != blank and block.settings.cta_link != blank %}
                  <a href="{{ block.settings.cta_link }}" class="feature-cta" aria-label="{{ block.settings.cta_text }}">
                    {{ block.settings.cta_text }}
                    <i class="ph ph-arrow-right"></i>
                  </a>
                {% endif %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}

    <!-- KPI Metrics -->
    {% if section.settings.show_kpis %}
      <div class="kpi-container">
        {% if section.settings.kpi_1_value != blank %}
          <div class="kpi-item">
            <div class="kpi-value" style="color: {% if section.settings.background_type == 'image' and section.settings.background_image != blank %}#ffffff{% else %}#0d1b2a{% endif %}">
              {{ section.settings.kpi_1_value }}
            </div>
            <div class="kpi-label" style="color: {% if section.settings.background_type == 'image' and section.settings.background_image != blank %}rgba(255, 255, 255, 0.8){% else %}#4a5568{% endif %}">
              {{ section.settings.kpi_1_label }}
            </div>
          </div>
        {% endif %}

        {% if section.settings.kpi_2_value != blank %}
          <div class="kpi-item">
            <div class="kpi-value" style="color: {% if section.settings.background_type == 'image' and section.settings.background_image != blank %}#ffffff{% else %}#0d1b2a{% endif %}">
              {{ section.settings.kpi_2_value }}
            </div>
            <div class="kpi-label" style="color: {% if section.settings.background_type == 'image' and section.settings.background_image != blank %}rgba(255, 255, 255, 0.8){% else %}#4a5568{% endif %}">
              {{ section.settings.kpi_2_label }}
            </div>
          </div>
        {% endif %}

        {% if section.settings.kpi_3_value != blank %}
          <div class="kpi-item">
            <div class="kpi-value" style="color: {% if section.settings.background_type == 'image' and section.settings.background_image != blank %}#ffffff{% else %}#0d1b2a{% endif %}">
              {{ section.settings.kpi_3_value }}
            </div>
            <div class="kpi-label" style="color: {% if section.settings.background_type == 'image' and section.settings.background_image != blank %}rgba(255, 255, 255, 0.8){% else %}#4a5568{% endif %}">
              {{ section.settings.kpi_3_label }}
            </div>
          </div>
        {% endif %}

        {% if section.settings.kpi_4_value != blank %}
          <div class="kpi-item">
            <div class="kpi-value" style="color: {% if section.settings.background_type == 'image' and section.settings.background_image != blank %}#ffffff{% else %}#0d1b2a{% endif %}">
              {{ section.settings.kpi_4_value }}
            </div>
            <div class="kpi-label" style="color: {% if section.settings.background_type == 'image' and section.settings.background_image != blank %}rgba(255, 255, 255, 0.8){% else %}#4a5568{% endif %}">
              {{ section.settings.kpi_4_label }}
            </div>
          </div>
        {% endif %}
      </div>
    {% endif %}

    <!-- Main CTA -->
    {% if section.settings.main_cta_text != blank and section.settings.main_cta_link != blank %}
      <div class="text-center">
        <a href="{{ section.settings.main_cta_link }}" class="main-cta">
          {{ section.settings.main_cta_text }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

