
{% schema %}{ "name":"Product template","settings":[] }{% endschema %}
<section style="padding:28px 0">
  <div class="container product-wrap">
    <div class="p-gallery">
      {% if product.featured_image %}
        <img src="{{ product.featured_image | image_url: width: 1400 }}" alt="{{ product.title }}" style="width:100%;border-radius:12px;border:1px solid var(--border)">
      {% endif %}
      {% if product.images.size > 1 %}
      <div class="p-thumb-row">
        {% for image in product.images %}
          <img src="{{ image | image_url: width: 400 }}" alt="{{ product.title }}">
        {% endfor %}
      </div>
      {% endif %}
    </div>
    <div>
      <h1 class="p-title">{{ product.title }}</h1>
      {% assign v = product.selected_or_first_available_variant %}
      <div class="p-meta">
        {% if v.sku != blank %}SKU: {{ v.sku }} · {% endif %}
        {% if v.inventory_quantity > 0 %}En stock{% else %}Agotado{% endif %}
      </div>
      <div style="margin:10px 0 16px">{% render 'price', product: product %}</div>
      <form method="post" action="/cart/add">
        <select name="id" class="variant-select">
          {% for variant in product.variants %}
            <option value="{{ variant.id }}" {% if variant == v %}selected{% endif %}>
              {{ variant.title }} — {{ variant.price | money }}
            </option>
          {% endfor %}
        </select>
        <input class="qty" type="number" min="1" value="1" name="quantity">
        <div class="p-buy">
          <button class="btn btn-primary" type="submit">{{ 'general.add_to_cart' | t }}</button>
        </div>
      </form>
      <div class="section-sub" style="margin-top:18px">{{ product.description }}</div>
    </div>
  </div>
</section>
