
{% schema %}{ "name":"Main search","settings":[] }{% endschema %}
<section style="padding:32px 0">
  <div class="container">
    <form action="{{ routes.search_url }}" method="get" style="margin:0 0 18px">
      <input class="qty" style="width:100%;max-width:560px" type="search" name="q" value="{{ search.terms | escape }}" placeholder="{{ 'general.search' | t }}">
    </form>
    {% if search.performed %}
      <p class="section-sub">“{{ search.terms | escape }}” — {{ search.results_count }}</p>
      <div class="grid grid-3">
        {% for item in search.results %}
          {% if item.object_type == 'product' %}
            {% render 'product-card', product: item %}
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>
