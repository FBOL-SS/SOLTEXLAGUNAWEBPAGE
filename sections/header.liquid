
{% schema %}
{
  "name": "Header",
  "settings": [
    { "type": "image_picker", "id": "logo", "label": "Logo" },
    { "type": "text", "id": "brand", "label": "Brand text", "default": "SOLTEX LAGUNA" },
    { "type": "link_list", "id": "menu", "label": "Main menu", "default": "main-menu" }
  ]
}
{% endschema %}
<header class="header">
  <div class="container row">
    <a href="{{ routes.root_url }}" class="logo" style="display:flex;align-items:center;gap:10px">
      {% if section.settings.logo %}
        <img src="{{ section.settings.logo | image_url: width: 220 }}" alt="{{ shop.name }}" style="height:44px">
      {% endif %}
      <strong style="font-size:1.1rem">{{ section.settings.brand }}</strong>
    </a>
    <nav class="nav hide-mobile">
      {% for link in linklists[section.settings.menu].links %}
        <a href="{{ link.url }}" {% if link.active %}style="text-decoration:underline"{% endif %}>{{ link.title }}</a>
      {% endfor %}
    </nav>
    <div style="display:flex;align-items:center;gap:10px">
      <a class="icon-btn" href="{{ routes.search_url }}" aria-label="{{ 'general.search' | t }}">ðŸ”Ž</a>
      <a class="icon-btn" href="{{ routes.cart_url }}" aria-label="Cart">ðŸ›’</a>
      <button class="icon-btn show-mobile" data-menu aria-label="Menu">â˜°</button>
    </div>
  </div>
  <dialog data-drawer style="width:100%;max-width:none;border:none;height:100dvh;padding:0">
    <div style="padding:16px" class="container">
      <div style="display:flex;justify-content:space-between;align-items:center">
        <strong>{{ section.settings.brand }}</strong>
        <button class="icon-btn" data-menu aria-label="Close">âœ•</button>
      </div>
      <div style="display:flex;flex-direction:column;gap:14px;margin-top:18px">
        {% for link in linklists[section.settings.menu].links %}
          <a style="padding:10px 0;border-bottom:1px solid var(--border)" href="{{ link.url }}">{{ link.title }}</a>
        {% endfor %}
      </div>
    </div>
  </dialog>
</header>
