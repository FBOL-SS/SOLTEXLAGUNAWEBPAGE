{% schema %}
{
  "name": "Header",
  "settings": [
    { "type": "image_picker", "id": "logo", "label": "Logo" },
    { "type": "link_list", "id": "menu", "label": "Men√∫ principal" }
  ]
}
{% endschema %}

<nav class="bg-white shadow-md sticky top-0 z-50">
  <div class="container mx-auto px-6 py-4">
    <div class="flex justify-between items-center">
      <div class="flex items-center space-x-8">
        <a href="/" class="flex items-center">
          <img src="{{ section.settings.logo | img_url: 'small' | default: 'https://lookaside.fbsbx.com/lookaside/crawler/media/?media_id=100064049135215' }}" alt="Soluciones Textiles Laguna Logo" class="h-12">
          <span class="ml-3 text-xl font-bold">SOLUCIONES TEXTILES LAGUNA</span>
        </a>
      </div>
      <div class="hidden md:flex items-center space-x-8">
        {% for link in linklists[section.settings.menu].links %}
          <a href="{{ link.url }}" class="hover:text-blue transition {% if link.active %}text-lightblue font-medium{% endif %}">{{ link.title }}</a>
        {% endfor %}
      </div>
      <div class="flex items-center space-x-4">
        <a href="/search" class="p-2 rounded-full hover:bg-gray-100"><i data-feather="search"></i></a>
        <a href="/cart" class="p-2 rounded-full hover:bg-gray-100"><i data-feather="shopping-cart"></i></a>
        <button class="md:hidden"><i data-feather="menu"></i></button>
      </div>
    </div>
  </div>
</nav>
