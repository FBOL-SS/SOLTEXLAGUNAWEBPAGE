<section class="rich-text">
  <div class="container">
    <h2>{{ section.settings.title }}</h2>
    <div class="rte">{{ section.settings.body }}</div>
  </div>
</section>

{% schema %}
{
  "name": "Rich text",
  "settings": [
    { "type": "text", "id": "title", "label": "Título", "default": "Quiénes somos" },
    { "type": "richtext", "id": "body", "label": "Texto", "default": "<p>Integradores de soluciones para confección en México y C.A.</p>" }
  ],
  "presets": [{ "name": "Rich text" }]
}
{% endschema %}
