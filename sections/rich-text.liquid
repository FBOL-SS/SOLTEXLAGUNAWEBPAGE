<section class="rich-text">
  <div class="rich-text__inner">
    {% if section.settings.heading != blank %}
      <h2>{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.content != blank %}
      <div class="rich-text__content">{{ section.settings.content }}</div>
    {% endif %}
    {% if section.blocks.size > 0 %}
      <ul class="rich-text__list">
        {% for block in section.blocks %}
          <li>{{ block.settings.item }}</li>
        {% endfor %}
      </ul>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Texto enriquecido",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Conoce nuestra historia"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Contenido",
      "default": "<p>En SOLTEX / SEWING acompañamos a talleres y grandes fabricantes con soluciones integrales en costura industrial.</p>"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Elemento",
      "settings": [
        {
          "type": "text",
          "id": "item",
          "label": "Elemento de lista",
          "default": "Suministro continuo de refacciones certificadas"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Texto enriquecido"
    }
  ]
}
{% endschema %}
