
{% schema %}
{
  "name": "Product grid",
  "settings": [
    { "type": "collection", "id": "collection", "label": "Collection" },
    { "type": "range", "id": "limit", "label": "Products to show", "min": 3, "max": 24, "step": 1, "default": 9 }
  ]
}
{% endschema %}
<section style="padding:44px 0">
  <div class="container">
    {% assign col = collections[section.settings.collection] %}
    {% if col == nil %}{% assign col = collections['all'] %}{% endif %}
    <h2 class="section-title">{{ col.title }}</h2>
    <p class="section-sub">{{ col.products_count }} productos</p>
    <div class="grid grid-3">
      {% for product in col.products limit: section.settings.limit %}
        {% render 'product-card', product: product %}
      {% endfor %}
    </div>
  </div>
</section>
