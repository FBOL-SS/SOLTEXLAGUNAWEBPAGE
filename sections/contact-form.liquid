<section class="contact">
  <div class="container">
    {% form 'contact' %}
      <div class="grid">
        <input type="text" name="contact[name]" placeholder="Nombre" required>
        <input type="email" name="contact[email]" placeholder="Email" required>
      </div>
      <textarea name="contact[body]" placeholder="Mensaje" required></textarea>
      <button type="submit">Enviar</button>
      {% if form.posted_successfully? %}<p class="ok">Â¡Mensaje enviado!</p>{% endif %}
      {% if form.errors %}<p class="err">Revisa los campos.</p>{% endif %}
    {% endform %}
  </div>

  {% schema %}{ "name":"Formulario de contacto","settings":[] }{% endschema %}
</section>
