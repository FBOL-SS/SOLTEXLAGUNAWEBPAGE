{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    { "type": "image_picker", "id": "image", "label": "Imagen de fondo" },
    { "type": "text", "id": "title", "label": "Título", "default": "Precision Sewing Solutions" },
    { "type": "text", "id": "subtitle", "label": "Subtítulo", "default": "For Modern Factories" },
    { "type": "url", "id": "button_link", "label": "Enlace del botón" },
    { "type": "text", "id": "button_text", "label": "Texto del botón", "default": "Explore Products" }
  ]
}
{% endschema %}

<section class="hero-gradient text-white py-24 relative overflow-hidden" style="background-image: url('{{ section.settings.image | img_url: 'master' | default: 'https://www.juki.co.jp/industrial_e/craftsmanship/images/img_factory_01.jpg' }}'); background-size: cover;">
  <div class="container mx-auto px-6 flex flex-col md:flex-row items-center">
    <div class="md:w-1/2 mb-12 md:mb-0 hero-content">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">{{ section.settings.title }}</h1>
      <p class="text-xl mb-8">{{ section.settings.subtitle }}</p>
      <a href="{{ section.settings.button_link }}" class="bg-lightblue hover:bg-blue text-white font-bold py-4 px-8 rounded-lg transition">{{ section.settings.button_text }}</a>
    </div>
  </div>
</section>
