{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    { "type": "image_picker", "id": "image", "label": "Imagen de banner (e.g., telas destacadas)" },
    { "type": "text", "id": "title", "label": "Título", "default": "50% Off en Telas para Uniformes" },
    { "type": "text", "id": "subtitle", "label": "Subtítulo", "default": "Calidad premium para tu negocio" },
    { "type": "url", "id": "link", "label": "Enlace" }
  ],
  "presets": [{ "name": "Hero Banner" }]
}
{% endschema %}

<div class="hero" style="background-image: url('{{ section.settings.image | img_url: 'master' }}');">
  <h2>{{ section.settings.title }}</h2>
  <p>{{ section.settings.subtitle }}</p>
  <a href="{{ section.settings.link }}">Comprar Ahora</a>
</div>