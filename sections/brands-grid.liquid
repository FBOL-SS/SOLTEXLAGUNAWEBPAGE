
{% schema %}
{
  "name": "Brands grid",
  "settings": [],
  "blocks": [
    {
      "type": "brand",
      "name": "Brand",
      "settings": [
        { "type": "image_picker", "id": "logo", "label": "Logo" },
        { "type": "text", "id": "name", "label": "Name" },
        { "type": "textarea", "id": "desc", "label": "Description" },
        { "type": "url", "id": "link", "label": "Link" }
      ]
    }
  ],
  "max_blocks": 12
}
{% endschema %}
<section class="py-16 bg-white">
  <div class="container mx-auto px-6">
    <h2 class="text-3xl font-bold text-center mb-12">Our Brands & Partnerships</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {% for block in section.blocks %}
        <div class="bg-gray-50 p-6 rounded-lg brand-card">
          <div class="flex justify-center mb-4">
            {% if block.settings.logo %}
              <img src="{{ block.settings.logo | image_url: width: 320 }}" alt="{{ block.settings.name }}" class="h-20 object-contain">
            {% endif %}
          </div>
          <h3 class="text-xl font-semibold text-center mb-2">{{ block.settings.name }}</h3>
          <p class="text-gray-700 text-center mb-4">{{ block.settings.desc }}</p>
          {% if block.settings.link %}
            <div class="text-center">
              <a href="{{ block.settings.link }}" class="text-lightblue hover:underline font-medium inline-flex items-center">View Catalog</a>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>
