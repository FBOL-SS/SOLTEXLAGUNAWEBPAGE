<footer class="site-footer">
  <div class="footer-columns">
    <div class="footer-column">
      <h3>{{ section.settings.about_title }}</h3>
      <p>{{ section.settings.about_text }}</p>
    </div>
    <div class="footer-column">
      <h3>{{ section.settings.contact_title }}</h3>
      <p>{{ section.settings.contact_text }}</p>
    </div>
    <div class="footer-column">
      <h3>{{ section.settings.links_title }}</h3>
      <ul>
        <li><a href="/">Inicio</a></li>
        <li><a href="/pages/sobre-nosotros">Sobre Nosotros</a></li>
        <li><a href="/collections/all">Tienda</a></li>
        <li><a href="/pages/contacto">Contacto</a></li>
      </ul>
    </div>
  </div>
  <p class="footer-copy">&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. Todos los derechos reservados.</p>
</footer>

{% schema %}
{
  "name": "Pie de página",
  "settings": [
    {
      "type": "text",
      "id": "about_title",
      "label": "Título acerca de",
      "default": "Sobre SOLTEX / SEWING"
    },
    {
      "type": "textarea",
      "id": "about_text",
      "label": "Texto acerca de",
      "default": "Más de 20 años suministrando maquinaria y suministros de costura industrial en toda Latinoamérica."
    },
    {
      "type": "text",
      "id": "contact_title",
      "label": "Título de contacto",
      "default": "Contacto"
    },
    {
      "type": "textarea",
      "id": "contact_text",
      "label": "Texto de contacto",
      "default": "Teléfono: +52 55 1234 5678\nCorreo: ventas@soltex.com"
    },
    {
      "type": "text",
      "id": "links_title",
      "label": "Título de enlaces",
      "default": "Enlaces rápidos"
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "Pie de página"
    }
  ]
}
{% endschema %}
