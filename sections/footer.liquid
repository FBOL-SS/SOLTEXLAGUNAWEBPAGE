
{% schema %}
{
  "name": "Footer",
  "settings": [
    { "type": "richtext", "id": "about", "label": "About text", "default": "<p>Industrial sewing solutions for Mexico & Central America.</p>" },
    { "type": "text", "id": "address", "label": "Address", "default": "Av. Industrial 1234, Monterrey, NL, Mexico" },
    { "type": "text", "id": "phone", "label": "Phone", "default": "+52 81 1234 5678" },
    { "type": "text", "id": "email", "label": "Email", "default": "info@soltexlaguna.com" }
  ],
  "blocks": [
    { "type": "link_list", "name": "Quick links", "settings": [{ "type": "link_list", "id": "menu", "label": "Menu" }] }
  ],
  "max_blocks": 4
}
{% endschema %}
<footer class="bg-white border-t mt-16">
  <div class="container mx-auto px-6 py-12 grid grid-cols-1 md:grid-cols-4 gap-8">
    <div>
      <h3 class="text-lg font-semibold mb-3">{{ shop.name }}</h3>
      <div class="prose text-gray-700">{{ section.settings.about }}</div>
    </div>
    {% for block in section.blocks %}
      {% if block.type == 'link_list' %}
      <div>
        <h4 class="text-lg font-semibold mb-3">{{ linklists[block.settings.menu].title }}</h4>
        <ul class="space-y-2">
          {% for l in linklists[block.settings.menu].links %}
            <li><a class="hover:text-blue-600" href="{{ l.url }}">{{ l.title }}</a></li>
          {% endfor %}
        </ul>
      </div>
      {% endif %}
    {% endfor %}
    <div>
      <h4 class="text-lg font-semibold mb-3">Contact</h4>
      <p class="text-gray-700">{{ section.settings.address }}</p>
      <p class="text-gray-700">{{ section.settings.phone }}</p>
      <p class="text-gray-700">{{ section.settings.email }}</p>
    </div>
  </div>
  <div class="text-center text-sm text-gray-500 py-4 border-t">
    © {{ 'now' | date: '%Y' }} {{ shop.name }} — All rights reserved.
  </div>
</footer>
