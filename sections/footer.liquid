
{% schema %}
{
  "name": "Footer",
  "settings": [
    { "type": "text", "id": "headline", "label": "Headline", "default": "Industrial sewing solutions for Mexico & Central America." },
    { "type": "text", "id": "address", "label": "Address", "default": "Av. Industrial 1234, Monterrey, NL, México" },
    { "type": "text", "id": "phone", "label": "Phone", "default": "+52 81 1234 5678" },
    { "type": "text", "id": "email", "label": "Email", "default": "info@soltexlaguna.com" }
  ],
  "blocks": [
    { "type": "menu", "name": "Links", "settings": [ { "type": "link_list", "id": "menu", "label": "Menu" } ] }
  ]
}
{% endschema %}
<footer class="footer">
  <div class="container" style="padding:40px 0">
    <div class="grid grid-3">
      <div>
        <h4>{{ shop.name }}</h4>
        <p class="section-sub">{{ section.settings.headline }}</p>
        <div class="newsletter">
          <h4 style="margin-top:0">Suscríbete</h4>
          <form action="{{ routes.root_url }}?newsletter=1" method="post">
            <input type="email" name="email" placeholder="Tu correo" required>
            <button class="btn btn-primary" type="submit">Unirme</button>
          </form>
        </div>
      </div>
      {% for block in section.blocks %}
        {% if block.type == 'menu' %}
          <div>
            <h4>{{ linklists[block.settings.menu].title }}</h4>
            <ul style="list-style:none;padding:0;margin:0;display:grid;gap:6px">
              {% for l in linklists[block.settings.menu].links %}
                <li><a href="{{ l.url }}">{{ l.title }}</a></li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}
      {% endfor %}
      <div>
        <h4>Contacto</h4>
        <p>{{ section.settings.address }}</p>
        <p>{{ section.settings.phone }}</p>
        <p>{{ section.settings.email }}</p>
      </div>
    </div>
    <div style="border-top:1px solid var(--border);margin-top:22px;padding-top:14px;font-size:.9rem;color:var(--muted)">
      © {{ 'now' | date: '%Y' }} {{ shop.name }} — Todos los derechos reservados.
    </div>
  </div>
</footer>
