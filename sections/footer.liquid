<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@phosphor-icons/web/src/regular/style.css" />

<style>
  .shopdev .footer-link {
    transition: color 0.3s ease;
  }
  
  .shopdev .footer-link:hover {
    color: #E5E7EB;
  }
  
  .shopdev .social-icon {
    transition: all 0.3s ease;
  }
  
  .shopdev .social-icon:hover {
    transform: translateY(-2px);
    color: #E5E7EB;
  }
  
  @media (max-width: 768px) {
    .shopdev .footer-columns {
      text-align: center;
    }
  }
</style>

<footer class="w-full" style="background-color: #0D1B2A; color: #FFFFFF;">
  <div class="max-w-[1200px] mx-auto px-6 md:px-8 py-10 md:py-16">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 md:gap-6 footer-columns">
      
      <!-- Brand Column -->
      <div class="flex flex-col items-center md:items-start">
        {% if section.settings.logo != blank %}
          <div class="mb-4">
            {{ section.settings.logo | image_url: width: 200 | image_tag: 
              class: 'h-auto max-w-[150px]',
              alt: shop.name,
              loading: 'lazy'
            }}
          </div>
        {% else %}
          <h3 class="text-xl font-bold mb-4">{{ shop.name }}</h3>
        {% endif %}
        
        {% if section.settings.description != blank %}
          <p class="text-sm leading-relaxed opacity-90 max-w-[280px]">
            {{ section.settings.description }}
          </p>
        {% endif %}
      </div>
      
      <!-- Quick Links Column -->
      <div class="flex flex-col items-center md:items-start">
        {% if section.settings.quick_links_title != blank %}
          <h4 class="text-base font-semibold mb-4 uppercase tracking-wide">
            {{ section.settings.quick_links_title }}
          </h4>
        {% endif %}
        
        {% if section.settings.quick_links != blank %}
          <nav>
            <ul class="space-y-3">
              {% for link in linklists[section.settings.quick_links].links %}
                <li>
                  <a href="{{ link.url }}" class="footer-link text-sm">
                    {{ link.title }}
                  </a>
                </li>
              {% endfor %}
            </ul>
          </nav>
        {% endif %}
      </div>
      
      <!-- Contact Column -->
      <div class="flex flex-col items-center md:items-start">
        {% if section.settings.contact_title != blank %}
          <h4 class="text-base font-semibold mb-4 uppercase tracking-wide">
            {{ section.settings.contact_title }}
          </h4>
        {% endif %}
        
        <div class="space-y-3 text-sm">
          {% if section.settings.address != blank %}
            <div class="flex items-start justify-center md:justify-start gap-2">
              <i class="ph ph-map-pin text-lg mt-0.5"></i>
              <p class="opacity-90 leading-relaxed">{{ section.settings.address }}</p>
            </div>
          {% endif %}
          
          {% if section.settings.phone != blank %}
            <div class="flex items-center justify-center md:justify-start gap-2">
              <i class="ph ph-phone text-lg"></i>
              <a href="tel:{{ section.settings.phone | replace: ' ', '' }}" class="footer-link opacity-90">
                {{ section.settings.phone }}
              </a>
            </div>
          {% endif %}
          
          {% if section.settings.email != blank %}
            <div class="flex items-center justify-center md:justify-start gap-2">
              <i class="ph ph-envelope text-lg"></i>
              <a href="mailto:{{ section.settings.email }}" class="footer-link opacity-90">
                {{ section.settings.email }}
              </a>
            </div>
          {% endif %}
        </div>
      </div>
      
      <!-- Social Media Column -->
      <div class="flex flex-col items-center md:items-start">
        {% if section.settings.social_title != blank %}
          <h4 class="text-base font-semibold mb-4 uppercase tracking-wide">
            {{ section.settings.social_title }}
          </h4>
        {% endif %}
        
        <div class="flex gap-4">
          {% if section.settings.facebook_url != blank %}
            <a href="{{ section.settings.facebook_url }}" 
               class="social-icon" 
               target="_blank" 
               rel="noopener noreferrer"
               aria-label="Facebook">
              <i class="ph ph-facebook-logo text-2xl"></i>
            </a>
          {% endif %}
          
          {% if section.settings.instagram_url != blank %}
            <a href="{{ section.settings.instagram_url }}" 
               class="social-icon" 
               target="_blank" 
               rel="noopener noreferrer"
               aria-label="Instagram">
              <i class="ph ph-instagram-logo text-2xl"></i>
            </a>
          {% endif %}
          
          {% if section.settings.linkedin_url != blank %}
            <a href="{{ section.settings.linkedin_url }}" 
               class="social-icon" 
               target="_blank" 
               rel="noopener noreferrer"
               aria-label="LinkedIn">
              <i class="ph ph-linkedin-logo text-2xl"></i>
            </a>
          {% endif %}
          
          {% if section.settings.whatsapp_url != blank %}
            <a href="{{ section.settings.whatsapp_url }}" 
               class="social-icon" 
               target="_blank" 
               rel="noopener noreferrer"
               aria-label="WhatsApp">
              <i class="ph ph-whatsapp-logo text-2xl"></i>
            </a>
          {% endif %}
        </div>
      </div>
      
    </div>
  </div>
  
  <!-- Bottom Copyright Bar -->
  <div class="border-t border-white/10">
    <div class="max-w-[1200px] mx-auto px-6 md:px-8 py-6">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4 text-sm">
        
        <!-- Copyright Text -->
        <div class="text-center md:text-left opacity-80">
          <p>
            &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. 
            {% if section.settings.copyright_text != blank %}
              {{ section.settings.copyright_text }}
            {% else %}
              All rights reserved.
            {% endif %}
          </p>
        </div>
        
        <!-- Legal Links -->
        {% if section.settings.legal_links != blank %}
          <nav>
            <ul class="flex flex-wrap items-center justify-center gap-4 md:gap-6">
              {% for link in linklists[section.settings.legal_links].links %}
                <li>
                  <a href="{{ link.url }}" class="footer-link opacity-80">
                    {{ link.title }}
                  </a>
                </li>
              {% endfor %}
            </ul>
          </nav>
        {% endif %}
        
      </div>
    </div>
  </div>
</footer>

