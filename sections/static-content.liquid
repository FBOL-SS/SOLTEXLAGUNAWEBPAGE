
{% schema %}
{
  "name": "Static content",
  "settings": [
    { "type": "text", "id": "title", "label": "Title", "default": "Page title" },
    { "type": "richtext", "id": "content", "label": "Content", "default": "<p>Add your content here.</p>" }
  ]
}
{% endschema %}
<section class="py-16">
  <div class="container mx-auto px-6">
    <h1 class="text-4xl font-bold mb-6">{{ section.settings.title }}</h1>
    <div class="prose max-w-none text-gray-700">{{ section.settings.content }}</div>
  </div>
</section>
