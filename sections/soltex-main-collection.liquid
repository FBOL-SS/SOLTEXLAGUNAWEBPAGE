<script>
  // Toggle mobile filters
  function toggleMobileFilters() {
    const sidebar = document.getElementById('filterSidebar');
    sidebar.classList.toggle('active');
    document.body.style.overflow = sidebar.classList.contains('active') ? 'hidden' : '';
  }

  // Apply filters
  function applyFilters() {
    const form = document.getElementById('filterForm');
    const formData = new FormData(form);
    const params = new URLSearchParams(window.location.search);
    
    // Clear existing filter params
    const keysToDelete = [];
    for (const key of params.keys()) {
      if (key.startsWith('filter.')) {
        keysToDelete.push(key);
      }
    }
    keysToDelete.forEach(key => params.delete(key));
    
    // Add new filter params
    for (const [key, value] of formData.entries()) {
      if (value) {
        params.append(key, value);
      }
    }
    
    // Preserve sort order
    const sortBy = params.get('sort_by');
    
    // Navigate to filtered URL
    window.location.search = params.toString();
  }

  // Clear all filters
  function clearFilters() {
    const params = new URLSearchParams(window.location.search);
    const sortBy = params.get('sort_by');
    
    // Keep only sort_by parameter
    const newParams = new URLSearchParams();
    if (sortBy) {
      newParams.set('sort_by', sortBy);
    }
    
    window.location.search = newParams.toString();
  }

  // Remove specific filter
  function removeFilter(paramName, value) {
    const params = new URLSearchParams(window.location.search);
    
    if (value) {
      // Remove specific value
      const values = params.getAll(paramName);
      params.delete(paramName);
      values.forEach(v => {
        if (v !== value) {
          params.append(paramName, v);
        }
      });
    } else {
      // Remove price range (value is the max param name)
      params.delete(paramName);
      params.delete(value);
    }
    
    window.location.search = params.toString();
  }

  // Sort collection
  function sortCollection(sortBy) {
    const params = new URLSearchParams(window.location.search);
    params.set('sort_by', sortBy);
    window.location.search = params.toString();
  }

  // Buy now functionality
  function buyNow(variantId, quantity) {
    window.location.href = `/cart/${variantId}:${quantity}?checkout=true`;
  }

  // Quick view functionality
  function openQuickView(productId) {
    const productData = JSON.parse(
      document.querySelector(`[data-product-json="${productId}"]`).textContent
    );
    
    const modal = document.getElementById('quickViewModal');
    const overlay = document.getElementById('modalOverlay');
    const content = document.getElementById('modalContent');
    
    // Build modal content
    let html = '<div class="modal-images">';
    
    if (productData.images.length > 0) {
      html += `<img src="${productData.images[0]}" alt="${productData.title}" class="modal-main-image" id="mainImage">`;
      
      if (productData.images.length > 1) {
        html += '<div class="modal-thumbnails">';
        productData.images.forEach((img, index) => {
          html += `<img src="${img}" alt="${productData.title}" class="modal-thumbnail ${index === 0 ? 'active' : ''}" onclick="changeMainImage('${img}', this)">`;
        });
        html += '</div>';
      }
    }
    
    html += '</div><div class="modal-details">';
    html += `<h2>${productData.title}</h2>`;
    
    // Price
    html += '<div class="modal-price">';
    if (productData.compare_at_price && productData.compare_at_price > productData.price) {
      html += `<span class="compare-price">${formatMoney(productData.compare_at_price)}</span>`;
    }
    html += `<span>${formatMoney(productData.price)}</span>`;
    html += '</div>';
    
    // Description
    if (productData.description) {
      html += `<div class="modal-description">${productData.description}</div>`;
    }
    
    // Variant selector
    if (productData.variants.length > 1) {
      html += '<div class="variant-selector">';
      html += '<label for="variantSelect">Select Option:</label>';
      html += '<select id="variantSelect" onchange="updateVariantPrice()">';
      productData.variants.forEach(variant => {
        html += `<option value="${variant.id}" data-price="${variant.price}" ${!variant.available ? 'disabled' : ''}>
          ${variant.title} ${!variant.available ? '- Sold Out' : ''}
        </option>`;
      });
      html += '</select></div>';
    }
    
    // Quantity selector
    html += '<div class="quantity-selector">';
    html += '<label>Quantity:</label>';
    html += '<div class="quantity-input">';
    html += '<button type="button" onclick="updateQuantity(-1)">-</button>';
    html += '<input type="number" id="quantityInput" value="1" min="1" max="10" readonly>';
    html += '<button type="button" onclick="updateQuantity(1)">+</button>';
    html += '</div></div>';
    
    // Actions
    if (productData.available) {
      const firstAvailableVariant = productData.variants.find(v => v.available);
      html += '<div class="modal-actions">';
      html += `<button class="product-btn product-btn-primary" style="flex: 2;" onclick="buyNowFromModal()">Buy Now</button>`;
      html += '</div>';
    } else {
      html += '<p style="color: #ef4444; font-weight: 500;">This product is currently sold out</p>';
    }
    
    html += '</div>';
    
    content.innerHTML = html;
    modal.classList.add('active');
    overlay.classList.add('active');
    document.body.style.overflow = 'hidden';
  }

  function closeQuickView() {
    const modal = document.getElementById('quickViewModal');
    const overlay = document.getElementById('modalOverlay');
    modal.classList.remove('active');
    overlay.classList.remove('active');
    document.body.style.overflow = '';
  }

  function changeMainImage(src, thumbnail) {
    document.getElementById('mainImage').src = src;
    document.querySelectorAll('.modal-thumbnail').forEach(t => t.classList.remove('active'));
    thumbnail.classList.add('active');
  }

  function updateQuantity(change) {
    const input = document.getElementById('quantityInput');
    const newValue = parseInt(input.value) + change;
    if (newValue >= 1 && newValue <= 10) {
      input.value = newValue;
    }
  }

  function updateVariantPrice() {
    const select = document.getElementById('variantSelect');
    const selectedOption = select.options[select.selectedIndex];
    const price = selectedOption.dataset.price;
    // Price display would be updated here if needed
  }

  function buyNowFromModal() {
    const variantSelect = document.getElementById('variantSelect');
    const variantId = variantSelect ? variantSelect.value : variantSelect;
    const quantity = document.getElementById('quantityInput').value;
    
    // Get the first available variant if no selector
    if (!variantSelect) {
      const productData = JSON.parse(
        document.querySelector('[data-product-json]').textContent
      );
      const firstAvailable = productData.variants.find(v => v.available);
      if (firstAvailable) {
        buyNow(firstAvailable.id, quantity);
      }
    } else {
      buyNow(variantId, quantity);
    }
  }

  function formatMoney(cents) {
    return '$' + (cents / 100).toFixed(2);
  }

  // Close modal on Escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      closeQuickView();
      const sidebar = document.getElementById('filterSidebar');
      if (sidebar.classList.contains('active')) {
        toggleMobileFilters();
      }
    }
  });

  // Close mobile filters when clicking outside
  document.addEventListener('click', function(e) {
    const sidebar = document.getElementById('filterSidebar');
    const toggle = document.querySelector('.mobile-filter-toggle');
    
    if (sidebar.classList.contains('active') && 
        !sidebar.contains(e.target) && 
        !toggle.contains(e.target)) {
      toggleMobileFilters();
    }
  });
</script>

