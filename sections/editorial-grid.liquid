
{% schema %}
{
  "name": "Editorial grid",
  "settings": [
    { "type": "text", "id": "title", "label": "Title", "default": "Historias & Casos" },
    { "type": "textarea", "id": "subtitle", "label": "Subtitle", "default": "Proyectos reales, notas técnicas y lanzamientos." }
  ],
  "blocks": [
    { "type": "card", "name": "Card", "settings": [
      { "type": "image_picker", "id": "image", "label": "Image" },
      { "type": "text", "id": "eyebrow", "label": "Eyebrow", "default": "Artículo" },
      { "type": "text", "id": "heading", "label": "Heading", "default": "Automatización de pespuntes" },
      { "type": "url", "id": "link", "label": "Link" }
    ]}
  ],
  "max_blocks": 9
}
{% endschema %}
<section style="padding:44px 0">
  <div class="container">
    <h2 class="section-title">{{ section.settings.title }}</h2>
    <p class="section-sub">{{ section.settings.subtitle }}</p>
    <div class="masonry">
      {% for block in section.blocks %}
        <article class="masonry-item">
          {% if block.settings.image %}
            <img class="card-img" src="{{ block.settings.image | image_url: width: 1400 }}" alt="">
          {% endif %}
          <div class="card-body">
            <span class="badge">{{ block.settings.eyebrow }}</span>
            <h3 class="card-title">{{ block.settings.heading }}</h3>
            {% if block.settings.link %}<a class="btn btn-outline" href="{{ block.settings.link }}">Leer</a>{% endif %}
          </div>
        </article>
      {% endfor %}
    </div>
  </div>
</section>
