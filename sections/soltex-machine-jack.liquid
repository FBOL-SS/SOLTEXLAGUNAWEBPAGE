    .shopdev .industries-container {
      grid-template-columns: repeat(4, 1fr);
    }

    .shopdev .categories-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>

<div class="w-full">
  <!-- Hero Banner -->
  <div class="hero-banner">
    {%- if section.settings.hero_image != blank -%}
      {{ section.settings.hero_image | image_url: width: 1920 | image_tag: 
        loading: 'eager',
        sizes: '100vw'
      }}
    {%- else -%}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'w-full h-full bg-gray-200' }}
    {%- endif -%}

    <div class="hero-overlay">
      <div class="hero-content">
        {% if section.settings.hero_subtitle != blank %}
          <p class="text-white text-base md:text-lg uppercase tracking-wider mb-4">
            {{ section.settings.hero_subtitle }}
          </p>
        {% endif %}

        {% if section.settings.hero_title != blank %}
          <h1 class="text-white text-4xl md:text-6xl font-bold mb-6">
            {{ section.settings.hero_title }}
          </h1>
        {% endif %}

        {% if section.settings.hero_button_text != blank and section.settings.hero_button_link != blank %}
          <a href="{{ section.settings.hero_button_link }}" 
             class="inline-block px-8 py-4 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors duration-300 text-lg font-semibold">
            {{ section.settings.hero_button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>

  <!-- Brand History -->
  <div class="brand-history">
    <div class="text-center">
      {% if section.settings.history_title != blank %}
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          {{ section.settings.history_title }}
        </h2>
      {% endif %}
    </div>

    <div class="brand-history-content">
      <div class="brand-history-text">
        {% if section.settings.history_text != blank %}
          <div class="prose prose-lg max-w-none">
            {{ section.settings.history_text }}
          </div>
        {% endif %}
      </div>

      <div class="brand-history-image">
        {%- if section.settings.history_image != blank -%}
          {{ section.settings.history_image | image_url: width: 800 | image_tag: 
            loading: 'lazy',
            sizes: '(min-width: 768px) 50vw, 100vw'
          }}
        {%- else -%}
          {{ 'collection-2' | placeholder_svg_tag: 'w-full h-full bg-gray-200 rounded-lg' }}
        {%- endif -%}
      </div>
    </div>
  </div>

  <!-- Products Carousel -->
  <div class="products-carousel">
    <div class="products-carousel-container">
      <div class="text-center mb-12">
        {% if section.settings.products_title != blank %}
          <h2 class="text-3xl md:text-4xl font-bold mb-4">
            {{ section.settings.products_title }}
          </h2>
        {% endif %}
        {% if section.settings.products_subtitle != blank %}
          <p class="text-gray-600 text-lg">
            {{ section.settings.products_subtitle }}
          </p>
        {% endif %}
      </div>

      {% if section.blocks.size > 0 %}
        <div class="swiper products-swiper">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              {% if block.type == 'product' %}
                {% assign product = block.settings.product %}
                <div class="swiper-slide" {{ block.shopify_attributes }}>
                  <div class="product-card">
                    {% if product != blank %}
                      <a href="{{ product.url }}">
                        {% if product.featured_image %}
                          {{ product.featured_image | image_url: width: 600 | image_tag: 
                            class: 'product-card-image',
                            loading: 'lazy'
                          }}
                        {% else %}
                          {{ 'product-1' | placeholder_svg_tag: 'product-card-image bg-gray-200' }}
                        {% endif %}
                      </a>

                      <div class="product-card-content">
                        <h3 class="text-xl font-semibold mb-2">
                          <a href="{{ product.url }}" class="hover:text-blue-600 transition-colors">
                            {{ product.title }}
                          </a>
                        </h3>

                        <p class="text-2xl font-bold text-gray-900 mb-4">
                          {{ product.price | money }}
                        </p>

                        <a href="{{ product.url }}" 
                           class="inline-block w-full text-center px-6 py-3 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors duration-300">
                          Ver MÃ¡s
                        </a>
                      </div>
                    {% else %}
                      {{ 'product-1' | placeholder_svg_tag: 'product-card-image bg-gray-200' }}
                      <div class="product-card-content">
                        <h3 class="text-xl font-semibold mb-2">Producto de Ejemplo</h3>
                        <p class="text-2xl font-bold text-gray-900 mb-4">$0.00</p>
                        <button class="inline-block w-full text-center px-6 py-3 bg-gray-300 text-gray-600 rounded-md cursor-not-allowed">
                          Seleccionar Producto
                        </button>
                      </div>
                    {% endif %}
                  </div>
                </div>
              {% endif %}
            {% endfor %}
          </div>

          <div class="swiper-button-prev"></div>
          <div class="swiper-button-next"></div>
        </div>
      {% else %}
        <div class="text-center py-12 bg-white rounded-lg">
          <p class="text-gray-500">Agrega productos destacados para comenzar</p>
        </div>
      {% endif %}
    </div>
  </div>

  <!-- Industries Grid -->
  <div class="industries-grid">
    <div class="text-center">
      {% if section.settings.industries_title != blank %}
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          {{ section.settings.industries_title }}
        </h2>
      {% endif %}
      {% if section.settings.industries_subtitle != blank %}
        <p class="text-gray-600 text-lg">
          {{ section.settings.industries_subtitle }}
        </p>
      {% endif %}
    </div>

    <div class="industries-container">
      {% for block in section.blocks %}
        {% if block.type == 'industry' %}
          <div class="industry-card" {{ block.shopify_attributes }}>
            {% if block.settings.icon != blank %}
              <i class="ph {{ block.settings.icon }} industry-icon"></i>
            {% endif %}

            {% if block.settings.title != blank %}
              <h3 class="text-xl font-bold mb-3">
                {{ block.settings.title }}
              </h3>
            {% endif %}

            {% if block.settings.description != blank %}
              <p class="text-gray-600">
                {{ block.settings.description }}
              </p>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <!-- Categories Mosaic -->
  <div class="categories-mosaic">
    <div class="categories-container">
      <div class="text-center">
        {% if section.settings.categories_title != blank %}
          <h2 class="text-3xl md:text-4xl font-bold mb-4">
            {{ section.settings.categories_title }}
          </h2>
        {% endif %}
        {% if section.settings.categories_subtitle != blank %}
          <p class="text-gray-600 text-lg">
            {{ section.settings.categories_subtitle }}
          </p>
        {% endif %}
      </div>

      <div class="categories-grid">
        {% for block in section.blocks %}
          {% if block.type == 'category' %}
            <a href="{{ block.settings.link }}" class="category-card" {{ block.shopify_attributes }}>
              {%- if block.settings.image != blank -%}
                {{ block.settings.image | image_url: width: 800 | image_tag: 
                  loading: 'lazy'
                }}
              {%- else -%}
                {{ 'collection-3' | placeholder_svg_tag: 'w-full h-full bg-gray-300' }}
              {%- endif -%}

              <div class="category-overlay">
                {% if block.settings.title != blank %}
                  <h3 class="text-2xl font-bold mb-2">
                    {{ block.settings.title }}
                  </h3>
                {% endif %}

                {% if block.settings.description != blank %}
                  <p class="text-sm opacity-90">
                    {{ block.settings.description }}
                  </p>
                {% endif %}
              </div>
            </a>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const productsSwiper = new Swiper('.products-swiper', {
      slidesPerView: 1,
      spaceBetween: 24,
      loop: true,
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      breakpoints: {
        640: {
          slidesPerView: 2,
          spaceBetween: 24,
        },
        768: {
          slidesPerView: 3,
          spaceBetween: 24,
        },
        1024: {
          slidesPerView: 4,
          spaceBetween: 24,
        }
      }
    });
  });
</script>

