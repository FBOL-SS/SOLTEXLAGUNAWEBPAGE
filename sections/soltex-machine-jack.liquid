    .shopdev .hero-banner {
      height: 700px;
    }

    .shopdev .brand-history-content {
      flex-direction: row;
      align-items: center;
    }

    .shopdev .industries-container {
      grid-template-columns: repeat(3, 1fr);
    }
  }

