{% schema %}
{
  "name": "Productos Destacados",
  "settings": [
    { "type": "text", "id": "title", "label": "Título", "default": "Productos Destacados" },
    { "type": "collection", "id": "collection", "label": "Colección" },
    { "type": "range", "id": "products_count", "min": 1, "max": 12, "default": 4, "label": "Número de productos" }
  ]
}
{% endschema %}

<section class="py-16 bg-white">
  <div class="container mx-auto px-6">
    <h2 class="text-3xl font-bold mb-8 text-center">{{ section.settings.title }}</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {% for product in collections[section.settings.collection].products limit: section.settings.products_count %}
        <div class="card-hover bg-white rounded-lg overflow-hidden shadow-md">
          <img src="{{ product.featured_image | img_url: 'large' | default: 'https://cdn11.bigcommerce.com/s-3pte0u8smt/images/stencil/1280x1280/products/119769/123431/jack-a5e-a-single-needle-direct-drive-fully-automatic-drop-feed-lockstitch-industrial-sewing-machine__67426.1732146549.jpg?c=1' }}" alt="{{ product.title }}" class="w-full h-48 object-cover">
          <div class="p-4">
            <h3 class="text-lg font-semibold mb-2">{{ product.title }}</h3>
            <p class="text-lightblue font-bold">{{ product.price | money }}</p>
            <a href="{{ product.url }}" class="block mt-4 bg-blue text-white py-2 px-4 rounded hover:bg-lightblue transition">Ver Detalles</a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
