<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@600;700&family=Inter:wght@400;500&display=swap">

<style>
  .shopdev .featured-categories-section {
    font-family: 'Inter', sans-serif;
    padding: 60px 20px;
    background-color: #ffffff;
  }

  .shopdev .section-header {
    text-align: center;
    margin-bottom: 48px;
  }

  .shopdev .section-title {
    font-family: 'Poppins', sans-serif;
    font-size: 36px;
    font-weight: 700;
    color: #0d1b2a;
    margin-bottom: 12px;
  }

  .shopdev .section-subtitle {
    font-size: 16px;
    color: #6b7280;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .shopdev .categories-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24px;
    max-width: 1200px;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .shopdev .categories-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 32px;
    }
  }

  @media (min-width: 1024px) {
    .shopdev .categories-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .shopdev .category-card {
    position: relative;
    background-color: #ffffff;
    border-radius: 12px;
    box-shadow: 0 4px 12px rgba(13, 27, 42, 0.08);
    overflow: hidden;
    transition: all 0.3s ease;
    display: block;
    text-decoration: none;
  }

  .shopdev .category-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(13, 27, 42, 0.15);
  }

  .shopdev .category-image-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .shopdev .category-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .shopdev .category-card:hover .category-image {
    transform: scale(1.08);
  }

  .shopdev .category-content {
    padding: 20px;
  }

  .shopdev .category-title {
    font-family: 'Poppins', sans-serif;
    font-size: 18px;
    font-weight: 700;
    color: #0d1b2a;
    margin-bottom: 8px;
    line-height: 1.3;
  }

  .shopdev .category-description {
    font-size: 14px;
    color: #6b7280;
    line-height: 1.5;
    margin: 0;
  }

  @keyframes shopdev-fadeUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .shopdev .category-card {
    animation: shopdev-fadeUp 0.6s ease-out forwards;
    opacity: 0;
  }

  .shopdev .category-card:nth-child(1) { animation-delay: 0.1s; }
  .shopdev .category-card:nth-child(2) { animation-delay: 0.2s; }
  .shopdev .category-card:nth-child(3) { animation-delay: 0.3s; }
  .shopdev .category-card:nth-child(4) { animation-delay: 0.4s; }
  .shopdev .category-card:nth-child(5) { animation-delay: 0.5s; }
  .shopdev .category-card:nth-child(6) { animation-delay: 0.6s; }
  .shopdev .category-card:nth-child(7) { animation-delay: 0.7s; }
  .shopdev .category-card:nth-child(8) { animation-delay: 0.8s; }

  @media (max-width: 767px) {
    .shopdev .section-title {
      font-size: 28px;
    }

    .shopdev .section-subtitle {
      font-size: 14px;
    }

    .shopdev .featured-categories-section {
      padding: 40px 16px;
    }

    .shopdev .category-title {
      font-size: 16px;
    }

    .shopdev .category-description {
      font-size: 13px;
    }

    .shopdev .category-content {
      padding: 16px;
    }
  }
</style>

<div class="w-full">
  <div class="featured-categories-section">
    {% if section.settings.section_title != blank or section.settings.section_subtitle != blank %}
      <div class="section-header">
        {% if section.settings.section_title != blank %}
          <h2 class="section-title">{{ section.settings.section_title }}</h2>
        {% endif %}
        {% if section.settings.section_subtitle != blank %}
          <p class="section-subtitle">{{ section.settings.section_subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="categories-grid">
        {% for block in section.blocks %}
          <a href="{{ block.settings.category_url | default: '#' }}" class="category-card" {{ block.shopify_attributes }}>
            <div class="category-image-wrapper">
              {%- if block.settings.category_image != blank -%}
                {{ block.settings.category_image | image_url: width: 600 | image_tag: 
                  class: 'category-image',
                  loading: 'lazy',
                  alt: block.settings.category_name
                }}
              {%- else -%}
                {{ 'product-1' | placeholder_svg_tag: 'category-image' }}
              {%- endif -%}
            </div>
            <div class="category-content">
              {% if block.settings.category_name != blank %}
                <h3 class="category-title">{{ block.settings.category_name }}</h3>
              {% endif %}
              {% if block.settings.category_description != blank %}
                <p class="category-description">{{ block.settings.category_description }}</p>
              {% endif %}
            </div>
          </a>
        {% endfor %}
      </div>
    {% else %}
      <div style="text-align: center; padding: 60px 20px; color: #6b7280;">
        <p>Add category blocks to display your featured categories</p>
      </div>
    {% endif %}
  </div>
</div>

