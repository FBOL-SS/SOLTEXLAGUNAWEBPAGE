<div class="card">
  <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}" class="w-full h-48 object-cover mb-4">
  <h3 class="text-lg font-semibold">{{ product.title }}</h3>
  <p class="text-gray-600 mb-2">{{ product.price | money }}</p>
  <a href="{{ product.url }}" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700">Ver Detalles</a>
</div>