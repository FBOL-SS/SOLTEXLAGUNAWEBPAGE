<div class="card-hover bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition duration-300 max-w-sm mx-auto md:mx-0">
  <img src="{{ product.featured_image | img_url: 'large' }}" alt="{{ product.title }}" class="w-full h-48 object-cover rounded-md mb-4">
  <h3 class="text-xl font-semibold text-navy mb-2">{{ product.title }}</h3>
  <p class="text-gray-600 mb-4">{{ product.price | money }}</p>
  <a href="{{ product.url }}" class="bg-blue text-white px-4 py-2 rounded hover:bg-lightblue transition duration-300 inline-block">Ver Detalles</a>
</div>