<div class="card-hover bg-white p-4 rounded-lg shadow-md hover:shadow-lg transition">
  <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}" class="w-full h-48 object-cover mb-4">
  <h3 class="text-lg font-semibold text-navy">{{ product.title }}</h3>
  <p class="text-gray-600 mb-2">{{ product.price | money }}</p>
  <a href="{{ product.url }}" class="bg-blue text-white px-4 py-2 rounded hover:bg-lightblue transition">Ver Detalles</a>
</div>